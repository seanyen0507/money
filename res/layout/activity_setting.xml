
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#DAC8B6"
            android:orientation="vertical" >
        </LinearLayout>

       

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom" >
            
           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#FFF5EB"
            android:orientation="horizontal"
            android:gravity="center" >

               <ImageButton
                   android:id="@+id/imageButtonSettingRent"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="#00ff0000"
                   android:layout_weight="1"
                   android:src="@drawable/ic_rent" />

               <ImageButton
                   android:id="@+id/imageButtonSettingFriend"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="#00ff0000"
                   android:layout_weight="1"
                   android:src="@drawable/ic_friend" />

               <ImageButton
                   android:id="@+id/imageButtonSettingProfile"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="#00ff0000"
                   android:layout_weight="1"
                   android:src="@drawable/ic_user" />
               
               
              

               <ImageButton
                   android:id="@+id/imageButtonSettingFacebook"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="#00ff0000"
                   android:layout_weight="1"
                   android:src="@drawable/ic_facebook" />
              
               <ImageButton
                   android:id="@+id/imageButtonSettingSetting"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="#00ff0000"
                   android:layout_weight="1"
                   android:src="@drawable/ic_setting_click" />


       	   </LinearLayout>
            
            
            
            
        </LinearLayout>
     
    </LinearLayout>
    
</RelativeLayout>
